{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "../..",
    "paths": {
      "@mbapp/scan": ["packages/mbapp-scan/src/index.ts"],
      "@mbapp/scan/*": ["packages/mbapp-scan/src/*"]
    }
  },
  "include": ["src", "src/vite-env.d.ts"]
}
